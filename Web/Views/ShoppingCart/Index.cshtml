@model Domain.DTO.ShoppingCartDto

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container">

    <div class="row m-2">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Tickets.Count == 0){

                    <tr>
                        <td>You dont have any active Products</td>
                    </tr>
                }
                else{
                    @for (int i = 0; i < Model.Tickets.Count; i++)
                    {
                        var item = Model.Tickets[i];

                        <tr>
                            <td>@item.Ticket.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Ticket.Price</td>
                            <td>
                                <a asp-controller="ShoppingCart" asp-action="DeleteFromShoppingCart" asp-route-id="@item.TicketId" class="btn btn-danger"> Delete it </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th scope="col">TotalPrice: @Model.TotalPrice</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>